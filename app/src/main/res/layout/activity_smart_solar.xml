<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="false"
    tools:context=".ui.smartsolar.SmartSolarActivity">

    <!-- 1. BOTÓN ATRÁS -->
    <com.google.android.material.button.MaterialButton
        android:contentDescription="@null"

        android:minWidth="@dimen/touch_target_min"
        android:minHeight="@dimen/touch_target_min"
        android:id="@+id/backButton"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/smart_solar_back_margin_start"
        android:layout_marginTop="@dimen/smart_solar_back_margin_top"
        android:text="@string/atr_s"
        android:textColor="@color/smart_solar_accent_green"
        android:textAllCaps="false"
        android:textSize="@dimen/smart_solar_back_text_size"
        android:paddingHorizontal="@dimen/smart_solar_back_padding_horizontal"
        app:icon="@drawable/ic_arrow_back_24"
        app:iconTint="@color/smart_solar_accent_green"
        app:iconPadding="@dimen/smart_solar_back_icon_padding"
        app:iconGravity="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 2. TÍTULO GRANDE -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/smart_solar_title_margin_top"
        android:layout_marginHorizontal="@dimen/smart_solar_title_margin_horizontal"
        android:text="@string/smart_solar"
        android:textColor="@color/black"
        android:textSize="@dimen/smart_solar_title_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backButton" />

    <!-- 3. TABS (Pestañas) -->
    <com.google.android.material.tabs.TabLayout
        android:importantForAccessibility="no"
        android:id="@+id/tabLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/smart_solar_tabs_margin_top"
        android:layout_marginHorizontal="@dimen/smart_solar_tabs_margin_horizontal"
        android:background="@color/white"
        app:tabTextAppearance="@style/smart_solar_tab"
        app:tabIndicator="@drawable/tab_indicator_rounded"
        app:tabIndicatorColor="@color/black"
        app:tabIndicatorHeight="@dimen/smart_solar_tab_indicator_height"
        app:tabIndicatorFullWidth="false"
        app:tabTextColor="@color/dark_gray"
        app:tabSelectedTextColor="@color/black"
        app:tabMode="scrollable"
        app:tabGravity="start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <!-- 4. CONTENEDOR DE PÁGINAS (ViewPager2) -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
