<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F7"
    tools:context=".ui.main.MainActivity">

    <!-- 1. FONDO ABSTRACTO -->
    <ImageView
        android:id="@+id/headerBackground"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_header_abstract"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 2. AVATAR (Estructura corregida: CardView > ImageView) -->
    <!-- Este es el contenedor circular blanco de 58dp -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/containerAvatar"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="29dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- EL ICONO DE USUARIO -->
        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_user_outline"
            app:tint="#555555" />
    </com.google.android.material.card.MaterialCardView>

    <!-- RETROMOCK SWITCH -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/btToggleApi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:thumbTint="@color/switch_thumb_color"
        app:trackTint="@color/selector_thumb_color"
        app:useMaterialThemeColors="false"
        app:layout_constraintEnd_toStartOf="@id/containerAvatar"
        app:layout_constraintTop_toTopOf="@id/containerAvatar"
        app:layout_constraintBottom_toBottomOf="@id/containerAvatar"/>

    <!-- "RetroMock" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RetroMock"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@id/btToggleApi"
        app:layout_constraintTop_toTopOf="@id/btToggleApi"
        app:layout_constraintBottom_toBottomOf="@id/btToggleApi"/>


    <!-- 4. SALUDO -->
    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:text="Hola, USUARIO"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:letterSpacing="-0.02"
        app:layout_constraintTop_toBottomOf="@id/containerAvatar"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 5. DIRECCIÓN -->
    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:text="Avenida de la Constitución, 45..."
        android:textSize="15sp"
        android:textColor="#333333"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@id/tvGreeting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvGreeting" />

    <!-- TÍTULO SECCIÓN -->
    <TextView
        android:id="@+id/tvSectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Mi Energía"
        android:textStyle="bold"
        android:textColor="#212121"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/tvGreeting"
        app:layout_constraintTop_toBottomOf="@id/tvAddress" />

    <!-- 6. TARJETA FACTURAS -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardFacturas"
        android:layout_width="160dp"
        android:layout_height="190dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="#F0F0F0"
        app:strokeWidth="1dp"
        app:layout_constraintStart_toStartOf="@id/tvSectionTitle"
        app:layout_constraintTop_toBottomOf="@id/tvSectionTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- ICONO BOMBILLA -->
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_lightbulb_outline"
                app:tint="#7CB342"/>

            <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>

            <!-- Texto Grande -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver\nConsumo"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:letterSpacing="-0.02"
                android:lines="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Histórico"
                android:textSize="14sp"
                android:textColor="#8E8E93"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Clickable Overlay -->
        <View
            android:id="@+id/btFacturasClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Abrir listado de facturas"/>

    </com.google.android.material.card.MaterialCardView>

    <!-- 7. NUEVA TARJETA SMART SOLAR -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSmartSolar"
        android:layout_width="160dp"
        android:layout_height="190dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="#F0F0F0"
        app:strokeWidth="1dp"
        app:layout_constraintStart_toEndOf="@id/cardFacturas"
        app:layout_constraintTop_toTopOf="@id/cardFacturas">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- ICONO SOLAR (Usamos bombilla como placeholder, cambia el tinte a naranja) -->
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_lightbulb_outline"
                app:tint="#FFA000"/>

            <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>

            <!-- Texto Grande -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smart\nSolar"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:letterSpacing="-0.02"
                android:lines="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paneles"
                android:textSize="14sp"
                android:textColor="#8E8E93"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Clickable Overlay -->
        <View
            android:id="@+id/btSmartSolarClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Abrir Smart Solar"/>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
