<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Fila superior: Fecha y Importe -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"> <!-- Total de pesos = 1.0 -->

        <!-- 1. Fecha falsa (Ocupa el 40%) -->
        <View
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_weight="0.4"
            android:background="#E0E0E0" />

        <!-- 2. CAMBIO CLAVE: Espaciador flexible -->
        <!-- Le damos el peso restante (0.4) para empujar lo siguiente a la derecha.
             CÃ¡lculo: 1.0 (total) - 0.4 (fecha) - 0.2 (importe) = 0.4 sobrante -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3" />

        <!-- 3. Importe falso (Ocupa el 20% y queda a la derecha) -->
        <View
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_weight="0.2"
            android:background="#E0E0E0" />

    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="8dp"/>

    <!-- Estado falso -->
    <View
        android:layout_width="100dp"
        android:layout_height="14dp"
        android:background="#E0E0E0" />

</LinearLayout>
