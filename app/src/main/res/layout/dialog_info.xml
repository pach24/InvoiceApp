<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dialog_card_corner_radius"
    app:cardElevation="@dimen/dialog_card_elevation"
    app:cardBackgroundColor="@color/dialog_card_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dialog_content_padding">

        <!-- TÍTULO -->
        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="@dimen/dialog_title_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_title_margin_top"
            android:layout_marginBottom="@dimen/dialog_title_margin_bottom"
            android:gravity="center"
            android:text="@string/autoconsumo_status_title"
            android:textColor="@color/dialog_title_color"
            android:textSize="@dimen/dialog_title_text_size"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- MENSAJE -->
        <TextView
            android:layout_marginTop="@dimen/spacing_medium"
            android:id="@+id/tvDialogMessage"
            android:layout_width="@dimen/dialog_message_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dialog_message_margin_bottom"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dialog_message_line_spacing_extra"
            android:text="@string/autoconsumo_status_message"
            android:textColor="@color/dialog_message_color"
            android:textSize="@dimen/dialog_message_text_size"
            app:layout_constraintTop_toBottomOf="@id/tvDialogTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- BOTÓN -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAceptar"
            android:layout_width="@dimen/dialog_button_width"
            android:layout_height="@dimen/dialog_button_height"
            android:layout_marginBottom="@dimen/dialog_button_margin_bottom"
            android:stateListAnimator="@null"
            android:text="@string/accept"
            android:textAllCaps="false"
            android:textColor="@color/dialog_button_text_color"
            android:textSize="@dimen/dialog_button_text_size"
            app:backgroundTint="@color/my_theme_green_light"
            app:cornerRadius="@dimen/dialog_button_corner_radius"
            android:layout_marginTop="@dimen/spacing_medium"
            app:layout_constraintTop_toBottomOf="@id/tvDialogMessage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
