<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="64dp"
    android:paddingHorizontal="32dp"
    android:background="@color/white">

    <!-- IMAGEN -->
    <ImageView
        android:id="@+id/imgGears"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/plan_gestiones"
        android:scaleType="fitCenter"
        android:contentDescription="@string/trabajo_en_progreso" />

    <!-- Reduce este espacio si tambiÃ©n quieres acercar el texto a la imagen -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="64dp" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/estamos_trabajando_en_mejorar_la_app_tus_paneles_solares_siguen_produciendo_en_breve_podr_s_seguir_viendo_tu_producci_n_solar_sentimos_las_molestias"
        android:textColor="#424242"
        android:textSize="16sp"
        android:lineSpacingMultiplier="1.2" />

</LinearLayout>
