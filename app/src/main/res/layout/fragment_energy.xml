<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="64dp"
    android:paddingHorizontal="32dp"
    android:background="@color/white">

    <!-- IMAGEN -->
    <ImageView
        android:id="@+id/imgGears"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/plan_gestiones"
        android:scaleType="fitCenter"
        android:contentDescription="@string/trabajo_en_progreso" />

    <!-- Reduce este espacio si tambiÃ©n quieres acercar el texto a la imagen -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="64dp" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="248dp"
        android:layout_height="159dp"
        android:gravity="center"
        android:letterSpacing="0.02"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/desc_energy_fragment"
        android:textColor="#424242"
        android:textSize="16sp" />

</LinearLayout>
